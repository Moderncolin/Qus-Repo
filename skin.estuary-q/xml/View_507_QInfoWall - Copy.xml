					</control> -->
					
					<control type="image">
						<top>-10</top>
						<width>376</width>
						<height>380</height>
						<texture>dialogs/dialog-bg-nobo.png</texture>
						<bordertexture border="21">overlays/shadow.png</bordertexture>
						<bordersize>20</bordersize>
					</control>
			<!--==================================================================================-->
					<control type="image">
						<posx>-11</posx>
						<posy>-10</posy>
						<width>142%</width>
						<height>128%</height>							
						<texture border="-0">special://skin/extras/PVR_Q/CinemaWidget/Alpha_Border.png</texture>
