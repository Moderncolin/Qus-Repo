						<include condition="$PARAM[focused]">Animation_FocusTextureFade</include>
							<bordertexture border="10">special://skin/extras/PVR_Q/CinemaWidget/darkline.png</bordertexture>
							<bordersize>13</bordersize>
							<animation type="Focus" reversible="true">
								<effect type="zoom" center="auto" start="0" end="100" time="200" tween="elastic" easing="inout" />
							</animation>
					</control>
					<control type="image">
						<top>3</top>
						<left>1</left>
						<width>100%</width>
						<height>99%</height>								
						<texture border="-0">special://skin/extras/PVR_Q/CinemaWidget/MenuSelect_Background_2.png</texture>
						<visible>$PARAM[focused]</visible>
						<include condition="$PARAM[focused]">Animation_FocusTextureFade</include>
					</control>
					<control type="image">
						<left>20</left>
						<top>10</top>
						<width>336</width>
						<height>300</height>
						<texture border="2" background="true">$VAR[InfoWallThumbVar]</texture>
						<aspectratio>keep</aspectratio>
					</control>
					<control type="label">
						<left>20</left>
						<top>318</top>
						<width>338</width>
						<textoffsetx>20</textoffsetx>
						<height>20</height>
						<align>center</align>
						<aligny>center</aligny>
						<font>font12</font>
						<label>$INFO[ListItem.Label]</label>
					</control>
				</itemlayout>
				
				<focusedlayout width="266" height="0">
<!--=========================================Border of image when foucused===============================================-->				
					<control type="group" id="-8">					    
					    <depth>DepthContentPopout</depth>
						<control type="image" id="21">
					        <posx>128</posx>
		                    <posy>10</posy>
					        <width>248</width>
					        <height>330</height>
                            <aspectratio>auto</aspectratio>					
					        <texture background="true" fallback="DefaultVideo.png" colordiffuse="66FFFFFF">special://skin/extras/PVR_Q/CinemaWidget/CinemaBoxZoomed_1.png</texture>
					        <bordertexture border="0" colordiffuse="overlays/shadow.png">special://skin/extras/PVR_Q/CinemaWidget/Alpha_Border.png</bordertexture>
                            <bordersize>-0</bordersize>
							<animation type="Focus" reversible="false">
							    <effect type="zoom" start="100" end="124,121.2" time="200" tween="sine" easing="inout" center="auto" />
						    </animation>
						    <animation type="Unfocus">
							    <effect type="zoom" start="112" end="100" time="200" tween="sine" easing="inout" center="auto" />
						    </animation>
				        </control>
					</control>
<!--=========================================Image when foucused===============================================-->
					<control type="group" id="3030">
					    <depth>DepthContentPopout</depth>						
						<control type="image" id="3031">
					        <posx>128</posx>
		                    <posy>10</posy>
					        <width>248</width>
					        <height>330</height>
                            <aspectratio>auto</aspectratio>					
					        <texture background="true" fallback="DefaultVideo.png">$INFO[ListItem.Art(poster)]</texture>
                            <bordersize>5</bordersize>
							<animation type="Focus" reversible="false">
							    <effect type="zoom" start="100" end="112" time="200" tween="sine" easing="inout" center="252,170" />
						    </animation>
						    <animation type="Unfocus">
							    <effect type="zoom" start="112" end="100" time="200" tween="sine" easing="inout" center="auto" />
						    </animation>
				        </control>
					</control>
<!--=================================Top CinemaBox_GlowLine=======================================-->
					<control type="group" id="-12">						
					    <depth>DepthContentPopout</depth>
						<control type="image" id="-13">						
					        <posx>156</posx>
		                    <posy>5</posy>
					        <width>190</width>
					        <height>12</height>
							<visible allowhiddenfocus="true">$PARAM[focused]</visible>
							
                            <aspectratio>auto</aspectratio>
					        <texture background="true" fallback="DefaultVideo.png">special://skin/extras/PVR_Q/CinemaWidget/CinemaBox_GlowLine_1.png</texture>
                            <bordersize>-0</bordersize>						
							<animation type="Focus" reversible="false">
							    <effect type="zoom" start="100" end="100,139.5" time="100" tween="sine" easing="inout" center="0,100" />								
								<effect type="fade" start="0" end="100" time="600" tween="sine" easing="inout" />
			                    <effect type="slide" start="-30" end="0" time="800" tween="cubic" easing="inout" />								
						    </animation>
						    <animation type="Unfocus">							    
							    <effect type="zoom" start="100,139.5" end="100" time="200" tween="sine" easing="inout" center="auto" />
								<effect type="fade" start="30" end="0" time="0" tween="sine" easing="inout" />								
						    </animation>                   
				        </control>

						<control type="image" id="-15">
					        <posx>156</posx>
		                    <posy>5</posy>
					        <width>33</width>
					        <height>15</height>
							<visible allowhiddenfocus="true">$PARAM[focused]</visible>
                            <aspectratio>auto</aspectratio>
					        <texture background="true" fallback="DefaultVideo.png" colordiffuse="F2FFFFFF">special://skin/extras/PVR_Q/CinemaWidget/CinemaBox_GlowLine_Ball_1.png</texture>
                            <bordersize>-0</bordersize>							
							<animation type="Focus" reversible="false">
							    <effect type="zoom" start="100" end="100,145" time="100" tween="sine" easing="inout" center="0,100" />								
								<effect type="fade" start="0" end="100" time="600" tween="sine" easing="inout" />
			                    <effect type="slide" start="-30" end="77" time="800" tween="cubic" easing="inout" />								
						    </animation>
						    <animation type="Unfocus">
							    <effect type="zoom" start="100,139.5" end="100" time="200" tween="sine" easing="inout" center="auto" />
								<effect type="fade" start="30" end="0" time="0" tween="sine" easing="inout" />								
						    </animation>                   
				        </control>						
					</control>
					
<!--=================================Bottom CinemaBox_GlowLine=======================================-->
					<control type="group" id="-12">					
					    <depth>DepthContentPopout</depth>
						<control type="image" id="-13">						
					        <posx>156</posx>
		                    <posy>291</posy>
					        <width>190</width>
					        <height>12</height>
							<visible allowhiddenfocus="true">$PARAM[focused]</visible>
                            <aspectratio>auto</aspectratio>
					        <texture background="true" fallback="DefaultVideo.png" flipy="true" flipx="false">special://skin/extras/PVR_Q/CinemaWidget/CinemaBox_GlowLine_1.png</texture>
                            <bordersize>-0</bordersize>						
							<animation type="Focus" reversible="false">
							    <effect type="zoom" start="100" end="100,139.5" time="100" tween="sine" easing="inout" center="0,100" />								
