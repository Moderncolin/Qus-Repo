<!--======================================================================Main Menu========================================================================-->
			<control type="group">
				<depth>DepthContentPanel</depth>
				<include>OpenClose_Left</include>
				<include content="ContentPanel">
					<param name="width" value="522" />
				</include>
				
				<control type="fixedlist" id="9000">
					<left>-26</left>
					<top>364</top>
					<width>462</width>
					<height>720</height>
					<focusposition>1</focusposition>
					<onfocus>ClearProperty(listposition,home)</onfocus>
					<onright>SetFocus($INFO[Container(9000).ListItem.Property(menu_id)])</onright>
					<onup>700</onup>
					<ondown>700</ondown>					
					<focusedlayout height="95">					
						<control type="group">
							<control type="image">
								<left>88</left>
								<width>368</width>
								<height>70</height>
								<top>12</top>
								<colordiffuse></colordiffuse>
								<texture colordiffuse="59000000">special://skin/extras/PVR_Q/KodiQ-Program_MenuSelect_Black_Background.png</texture>
								<shadowcolor>black</shadowcolor>
							</control>
							<control type="image">
								<left>82</left>
								<width>380</width>
								<height>82</height>
								<top>6</top>
								<texture colordiffuse="33FFFFFF">special://skin/extras/PVR_Q/KodiQ-Program_MenuSelect_Border.png</texture>
								<shadowcolor>black</shadowcolor>
							</control>							
						<include>KodiQ-HomeMenu_SlidingGlow</include>						
						</control>						
						<control type="label">
							<left>104</left>
							<top>0</top>
							<height>95</height>
							<width>560</width>
							<aligny>center</aligny>
							<font>MainMenu_Focused</font>
							<label>$INFO[ListItem.Label]</label>
							<shadowcolor>text_shadow</shadowcolor>
						</control>						
					</focusedlayout>					
					<itemlayout height="95">
						<control type="label">
							<left>104</left>
							<top>0</top>
							<height>95</height>
							<width>560</width>
							<aligny>center</aligny>
							<font>MainMenu_Layout</font>
